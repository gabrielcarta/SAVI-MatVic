{
  "info": {
    "_postman_id": "matvic-handoff",
    "name": "MatVic Back - Handoff",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{ \"username\": \"admin\", \"password\": \"Password123\" }" },
        "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api","auth","login"] }
      }
    },
    {
      "name": "Get products",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/api/products", "host": ["{{base_url}}"], "path": ["api","products"] } }
    },
    {
      "name": "Create sale",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{ \"metodo_pago\": \"efectivo\", \"id_empleado\": null, \"id_cliente\": null, \"items\": [{ \"id_producto\": 1, \"cantidad\": 1 }] }" },
        "url": { "raw": "{{base_url}}/api/sales", "host": ["{{base_url}}"], "path": ["api","sales"] }
      }
    },
    {
      "name": "Get alerts",
      "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{base_url}}/api/alerts", "host": ["{{base_url}}"], "path": ["api","alerts"] } }
    }
  ],
  "variable": [ { "key": "base_url", "value": "http://localhost:3001" }, { "key": "token", "value": "" } ]
}
